---
import Card from "../components/card.astro";
import Chip from "../components/chip.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

declare interface Link {
  desc: string;
  link: string;
  icon: string;
}
import astropodConfig from "../../.astropod/astropod.config.json";
import Footer from "../components/Footer.astro";

import BaseHead from "../components/BaseHead.astro";
const { image, title = astropodConfig.name, description = astropodConfig.description } = Astro.props;
// Put all your links here
const links: Link[] = [
  {
    desc: "Rollodesarrollo", // The text that will be rendered
    link: "rollodesarrollo.com", // The link
    icon: "fa-duotone fa-solid fa-house", // An icon from Font Awesome: https://fontawesome.com/search?o=r&m=free
  },
  {
    desc: "Apple Podcasts",
    link: "podcasts.apple.com/us/podcast/rollodesarrollo-by-xauendevs/id1729758251",
    icon: "fa-solid fa-podcast",
  },
  {
    desc: "Spotify",
    link: "open.spotify.com/show/41qaz8SpXt7qHZATDEDxGO?si=49c5a78b3e0c4e7c",
    icon: "fa-brands fa-spotify",
  },
    {
    desc: "Youtube",
    link: "www.youtube.com/@RolloDesarrollo",
    icon: "fa-brands fa-youtube",
  }

];
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='icon' type='image/x-icon' href='/favicon.png' />
    <meta name='viewport' content='width=device-width' />
    <link
      rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css'
      integrity='sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=='
      crossorigin='anonymous'
      referrerpolicy='no-referrer'
    />
    <meta name='generator' content={import.meta.env.GENERATOR} />
    <meta name='description' content='Links de Rollodesarrollo' />
    <meta name='author' content='Daniel Redondo' />
    <meta property='og:title' content='Links Rollodesarrollo' />
    <meta property='og:image' content='favicon.png' />
    <meta property='og:description' content='Linktree of Rollodesarrollo ' />
    <meta property='twitter:description' content='Linktree of Rollodesarrollo ' />
    <meta property='twitter:image' content='favicon.png' />
     <BaseHead title={title} description={description} image={image} />
  </head>
   <body class="p-8 bg-base min-h-screen">
    <div class="container mx-auto  gap-8 lg:max-w-[960px]">
      <div class="mt-5 md:flex md:justify-center w-full">
        <main class="w-full ">
           <div class='grid justify-center text-center gap-4'>
        {
          links.map(({ desc, link, icon }) => {
            return <Card {desc} {link} {icon} />;
          })
        }
      </div>
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>


